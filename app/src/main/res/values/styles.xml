<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textViewStyle">@style/MyTextView</item>
        <item name="android:editTextStyle">@style/MyEditText</item>
        <item name="android:windowBackground">@drawable/app_bg</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="MyTextView" parent="android:Widget.Holo.Light.TextView"> <item name="fontPath">fonts/myriadpro.ttf</item> </style>
    <style name="MyEditText" parent="android:Widget.Holo.Light.EditText"> <item name="fontPath">fonts/myriadpro.ttf</item> </style>

</resources>
