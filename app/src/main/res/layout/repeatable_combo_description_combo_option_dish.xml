<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:id="@+id/combo_layout">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id"
        android:visibility="gone" />

    <FrameLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/image"
            android:background="@drawable/app_bg"
            android:contentDescription="@string/combo_image"
            android:scaleType="centerCrop" />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_white_fading" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_combo_price_background"
        android:id="@+id/price_layout"
        android:paddingLeft="15dp"
        android:paddingTop="5dp"
        android:paddingRight="15dp"
        android:paddingBottom="5dp"
        android:layout_gravity="left"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rupee"
            android:textColor="@color/primary_text_dark"
            android:layout_marginRight="1dp"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price_lorem_ipsum"
            android:textSize="15sp"
            android:id="@+id/price"
            android:textColor="@color/primary_text_dark" />
    </LinearLayout>

    <com.android.volley.toolbox.NetworkImageView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/restaurant_logo"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/restaurant_logo"
        android:layout_margin="5dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_combo_card_fading_overlay">

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_combo_size_background"
            android:text="Serves 3"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/group_size" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:id="@+id/bottom_bar"
            android:padding="8dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/label"
                android:tint="@color/white"
                app:srcCompat="@drawable/svg_label"
                android:contentDescription="@string/label"/>

            <TextView
                android:paddingTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Awesome Combo"
                android:id="@+id/name"
                android:layout_weight="1"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_marginRight="60dp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/add_to_cart"
                app:srcCompat="@drawable/svg_android_plus"
                android:tint="@color/black"
                android:background="@drawable/bg_circular_light_button_background"
                android:padding="8dp"
                android:layout_alignRight="@+id/count_layout" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/count_layout"
                android:visibility="gone"
                android:gravity="center_vertical|center_horizontal"
                android:layout_centerInParent="true">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="8dp"
                    android:text="@string/minus"
                    android:id="@+id/minus"
                    app:srcCompat="@drawable/svg_android_minus"
                    android:tint="@color/black"
                    android:background="@drawable/bg_circular_light_button_background"
                    android:gravity="center_horizontal" />

                <TextView
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="@string/count_ipsum_lorem"
                    android:id="@+id/count"
                    android:textSize="20sp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="8dp"
                    android:text="@string/plus"
                    android:id="@+id/plus"
                    app:srcCompat="@drawable/svg_android_plus"
                    android:tint="@color/black"
                    android:background="@drawable/bg_circular_light_button_background"
                    android:gravity="center_horizontal" />

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>