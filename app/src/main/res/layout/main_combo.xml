<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:id="@+id/combo_layout"
        android:background="@color/combo_background"
        android:layout_marginRight="0dp"
        android:baselineAligned="false">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/clickable_layout">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <com.android.volley.toolbox.NetworkImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/image"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/combo_image"
                    android:src="@mipmap/image_default" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/combo_name_lorem_ipsum"
                        android:textSize="17sp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:id="@+id/name"
                        android:paddingTop="2dp"
                        android:paddingBottom="5dp"
                        android:layout_marginRight="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/combo_description_lorem_ipsum"
                        android:id="@+id/description"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:minLines="1"
                        android:fontFamily="sans-serif-light" />
                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/label"
                android:src="@mipmap/food_label"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:contentDescription="@string/label" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/add_to_cart_background"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingRight="15dp"
                android:paddingBottom="5dp"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rupee"
                    android:textColor="@color/abc_primary_text_material_dark"
                    android:layout_marginRight="1dp"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/price_lorem_ipsum"
                    android:textSize="15sp"
                    android:id="@+id/price"
                    android:textColor="@color/abc_primary_text_material_dark" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/add_to_cart_layout">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:src="@mipmap/cart"
                        android:tint="@color/color_accent_white_bg"
                        android:id="@+id/add_to_cart"
                        android:layout_centerHorizontal="true"
                        android:paddingLeft="33dp"
                        android:paddingRight="33dp"
                        android:contentDescription="@string/add_to_cart" />

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:src="@mipmap/add"
                        android:tint="@color/abc_primary_text_material_dark"
                        android:layout_alignRight="@+id/add_to_cart"
                        android:layout_marginTop="17dp"
                        android:layout_marginRight="32dp"
                        android:background="@drawable/cart_count_background"
                        android:contentDescription="@string/add" />
                </RelativeLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:id="@+id/count_layout"
                    android:visibility="gone"
                    android:layout_centerHorizontal="true">

                    <in.foodmash.app.custom.TouchableImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/minus"
                        android:tint="@color/color_accent_white_bg"
                        android:src="@mipmap/subtract"
                        android:contentDescription="@string/decrement"
                        android:scaleType="centerInside"
                        android:background="@color/transparent"
                        android:padding="10dp" />

                    <TextView
                        android:layout_width="20dp"
                        android:layout_height="wrap_content"
                        android:text="@string/count_ipsum_lorem"
                        android:id="@+id/count"
                        android:textSize="16sp"
                        android:gravity="center_horizontal" />

                    <in.foodmash.app.custom.TouchableImageButton
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/plus"
                        android:src="@mipmap/add"
                        android:tint="@color/color_accent_white_bg"
                        android:contentDescription="@string/increment"
                        android:scaleType="centerInside"
                        android:background="@color/transparent"
                        android:padding="10dp" />

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/black_222"
        android:id="@+id/added_to_cart_layout"
        android:visibility="gone"
        android:baselineAligned="false"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/cart"
            android:scaleType="centerCrop"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginBottom="1dp"
            android:contentDescription="@string/cart" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/added_to_cart"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="12sp"
            android:fontFamily="sans-serif-light" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id"
        android:visibility="gone" />

</LinearLayout>