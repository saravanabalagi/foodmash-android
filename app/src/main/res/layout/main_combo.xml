<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:id="@+id/combo_layout"
        android:background="@color/combo_background"
        android:layout_marginRight="0dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:id="@+id/image"
                    android:layout_margin="5dp"
                    android:contentDescription="@string/combo_image"
                    android:src="@mipmap/image_default" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/combo_name_lorem_ipsum"
                        android:textSize="17sp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:id="@+id/name"
                        android:paddingTop="2dp"
                        android:paddingBottom="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/combo_description_lorem_ipsum"
                        android:id="@+id/description"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:minLines="1" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_to_cart"
                android:gravity="center_vertical|center_horizontal">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/add_to_cart_background"
                    android:paddingLeft="15dp"
                    android:paddingTop="5dp"
                    android:paddingRight="15dp"
                    android:paddingBottom="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rupee"
                        android:textColor="@color/abc_primary_text_material_dark"
                        android:layout_marginRight="1dp"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/price_lorem_ipsum"
                        android:textSize="15sp"
                        android:id="@+id/price"
                        android:textColor="@color/abc_primary_text_material_dark" />
                </LinearLayout>

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/cart"
                    android:tint="@color/color_accent_white_bg"
                    android:layout_margin="10dp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/food_items_layout"
            android:layout_marginLeft="2dp"
            android:animateLayoutChanges="true">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/black_222"
        android:id="@+id/added_to_cart_layout"
        android:visibility="gone"
        android:baselineAligned="false">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/cart"
                android:scaleType="centerCrop"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginBottom="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ADDED TO CART"
                android:textColor="@color/abc_primary_text_material_dark"
                android:textSize="11sp"
                android:fontFamily="sans-serif-light" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity"
                android:textColor="@color/abc_primary_text_material_dark"
                android:textSize="11sp"
                android:fontFamily="sans-serif-light" />

            <in.foodmash.app.TouchableImageButton
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:id="@+id/minus"
                android:tint="@color/color_accent_dark_bg"
                android:src="@mipmap/subtract"
                android:contentDescription="@string/decrement"
                android:scaleType="centerInside"
                android:background="@color/transparent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/count"
                android:layout_gravity="center"
                android:textSize="15sp"
                android:textColor="@color/abc_primary_text_material_dark" />

            <in.foodmash.app.TouchableImageButton
                android:layout_width="40dp"
                android:layout_height="fill_parent"
                android:id="@+id/plus"
                android:src="@mipmap/add"
                android:tint="@color/color_accent_dark_bg"
                android:contentDescription="@string/increment"
                android:scaleType="centerInside"
                android:background="@color/transparent" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>