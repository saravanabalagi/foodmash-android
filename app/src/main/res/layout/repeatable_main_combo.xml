<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/bg_combo"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/combo_layout">

        <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageSlider" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/quick_view"
            app:srcCompat="@drawable/svg_info"
            android:background="@drawable/bg_circular_dark_button"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:tint="@color/white"
            android:layout_alignParentRight="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_combo_price_background"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:layout_gravity="left"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rupee"
                android:textColor="@color/primary_text_dark"
                android:layout_marginRight="1dp"
                android:textSize="12sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price_lorem_ipsum"
                android:textSize="15sp"
                android:id="@+id/price"
                android:textColor="@color/primary_text_dark" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_combo_card_fading_overlay">

            <TextView
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="12sp"
                android:textColor="@color/white"
                android:background="@drawable/bg_combo_size_background"
                android:text="Serves 3"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="50dp"
                android:id="@+id/group_size" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:id="@+id/bottom_bar"
                android:padding="5dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/combo_size_icon"
                    android:tint="@color/white"
                    app:srcCompat="@drawable/svg_user3"
                    android:contentDescription="@string/label"
                    android:background="@drawable/bg_rounded_bordered"
                    android:padding="5dp"
                    android:layout_margin="5dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Awesome Combo"
                    android:id="@+id/name"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:layout_marginRight="60dp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:padding="10dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/add_to_cart_layout"
                    app:srcCompat="@drawable/svg_cart"
                    android:background="@drawable/bg_circular_dark_button_background"
                    android:padding="10dp"
                    android:layout_alignRight="@+id/count_layout" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/count_layout"
                    android:visibility="gone"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:text="@string/minus"
                        android:paddingBottom="2dp"
                        android:id="@+id/minus"
                        app:srcCompat="@drawable/svg_minus"
                        android:background="@drawable/bg_circular_dark_button_background"
                        android:gravity="center_horizontal" />

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="@string/count_ipsum_lorem"
                        android:id="@+id/count"
                        android:textSize="20sp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingBottom="2dp"
                        android:text="@string/plus"
                        android:id="@+id/plus"
                        app:srcCompat="@drawable/svg_plus"
                        android:background="@drawable/bg_circular_dark_button_background"
                        android:gravity="center_horizontal" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/combo_info_layout"
        android:background="@drawable/combo_overlay_bg"
        android:layout_alignBottom="@+id/combo_layout"
        android:layout_alignTop="@+id/combo_layout"
        android:visibility="gone"
        android:alpha="0">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_242424"
            android:id="@+id/contents_wrapper"
            android:padding="20dp"
            android:gravity="center_vertical|center_horizontal">

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/combo_contents_layout">

                </LinearLayout>
            </ScrollView>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/restaurants_layout">

                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>

        <ImageView
            app:srcCompat="@drawable/svg_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/close_info_layout"
            android:layout_margin="10dp"
            android:tint="@color/white"
            android:layout_alignParentRight="true"
            android:paddingBottom="3dp" />

    </RelativeLayout>

    <LinearLayout android:background="@drawable/combo_overlay_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|center_horizontal"
        android:id="@+id/unavailable_layout"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Curently Unavailable" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/id"
        android:visibility="gone" />

</RelativeLayout>